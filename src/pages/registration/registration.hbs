<div class="registration">
  <div class="registration__form">
    <h1 class="registration__title">Регистрация</h1>
    
    <form class="registration__form-container">
      <div class="registration__field registration__field--full">
        <input type="text" id="login" name="login" class="registration__input" placeholder=" ">
        <label class="registration__label" for="login">Логин</label>
      </div>
      
      <div class="registration__row">
        <div class="registration__field">
          <input type="email" id="email" name="email" class="registration__input" placeholder=" ">
          <label class="registration__label" for="email">Почта</label>
        </div>

        <div class="registration__field">
          <input type="tel" id="phone" name="phone" class="registration__input" placeholder=" ">
          <label class="registration__label" for="phone">Телефон</label>
        </div>
      </div>

      <div class="registration__row">
        <div class="registration__field">
          <input type="text" id="first_name" name="first_name" class="registration__input" placeholder=" ">
          <label class="registration__label" for="first_name">Имя</label>
        </div>

        <div class="registration__field">
          <input type="text" id="second_name" name="second_name" class="registration__input" placeholder=" ">
          <label class="registration__label" for="second_name">Фамилия</label>
        </div>
      </div>
      
      <div class="registration__row">
        <div class="registration__field">
          <input type="password" id="password" name="password" class="registration__input" placeholder=" ">
          <label class="registration__label" for="password">Пароль</label>
        </div>

        <div class="registration__field">
          <input type="password" id="password_confirm" name="password_confirm" class="registration__input" placeholder=" ">
          <label class="registration__label" for="password_confirm">Повторите пароль</label>
          <span id="password-error" class="registration__error"></span>
        </div>
      </div>
      
      <div class="registration__actions">
        <button type="submit" class="registration__button">Зарегистрироваться</button>
        <div class="registration__footer">
        <a href="/pages/auth/auth.html" class="registration__link">Войти</a>
        </div>
      </div>
    </form>
    
  </div>
  <div class="registration__background-line"></div>
  {{> navigation-buttons pages=pages}}
</div>